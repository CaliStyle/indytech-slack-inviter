doctype html
html
  head
    title Join the #{community} community on Slack!
    link(rel='stylesheet',href='http://cdncatalog.com/assets/flat-ui/css/bootstrap.css')
    link(rel='stylesheet',href='http://cdncatalog.com/assets/flat-ui/css/flat-ui.css')
    style.
      body {
        padding-top: 20px;
      }
      
      p {
        margin-top: 1em;
      }

            #footer {
        margin-top: 60px;
      }

      #footer .container {
        width: 100%;
        height: 100%;
        text-align: center;
        vertical-align: center;
        font-size: 0.8em;
        padding-top: 15px;
        padding-bottom: 30px;
      }

      #footer a {
        text-decoration: none;
      }
  body
    div(class='container')
      h1 Successfully joined the #{community} community on Slack!
      p Check #{email} for an invite from Slack.
    
    div(id='footer', style='display: block;')
      div(class='container')
        p(class='credit')
          | Brought to you by 
          a(href='http://www.spantree.net') Spantree, LLC
        
        a(href='http://www.spantree.net')
          img(src='/images/spantree-logo.png', style="max-width: 140px")